{
  "name": "@thytanium/ts-express-starter",
  "version": "1.0.0",
  "description": "Starter kit for NodeJS projects powered by Express and TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon --ext \"ts,json\" --ignore \"**/*.spec.ts\" --exec \"ts-node server.ts\"",
    "build": "tsc",
    "serve": "pm2-runtime ecosystem.config.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thytanium/ts-express-starter.git"
  },
  "author": "thytanium",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thytanium/ts-express-starter/issues"
  },
  "homepage": "https://github.com/thytanium/ts-express-starter#readme",
  "dependencies": {
    "express": "^4.17.1",
    "pm2": "^5.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.4",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
